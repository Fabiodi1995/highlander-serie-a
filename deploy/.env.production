# Copia questo file in .env nel server di produzione e compila i valori

# Database - Usa il tuo database PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/highlander_prod

# App Configuration
NODE_ENV=production
PORT=3000
SESSION_SECRET=your-very-secure-random-session-secret-at-least-32-chars

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# Security
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database specifici per Docker
POSTGRES_DB=highlander_prod
POSTGRES_USER=highlander
POSTGRES_PASSWORD=your-secure-db-password